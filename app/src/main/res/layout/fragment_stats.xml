<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="1, 2"
    android:layout_margin="8dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1, 2"
        android:layout_margin="8dp">

    <TableRow>
        <TextView
            android:text="@string/refuelling"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="start"
            android:layout_column="1"/>
        <TextView
            android:text=""
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_column="1"/>
    </TableRow>

        <!--androidx.recyclerview.widget.RecyclerView-->

    <com.rusinak.carstat.ui.stats.StatsScrollDisabler
        android:id="@+id/statsRefuel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

    <TableRow>
        <TextView
            android:text="@string/maintainance"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="start"
            android:layout_column="1"/>
        <TextView
            android:text=""
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_column="1"/>
    </TableRow>

    <com.rusinak.carstat.ui.stats.StatsScrollDisabler
        android:id="@+id/statsMaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

    <TableRow>
        <TextView
            android:text="@string/inspection"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="start"
            android:layout_column="1"/>
        <TextView
            android:text=""
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_column="1"/>
    </TableRow>

    <com.rusinak.carstat.ui.stats.StatsScrollDisabler
        android:id="@+id/statsInsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

    <TableRow>
        <TextView
            android:text="@string/repairs"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="start"
            android:layout_column="1"/>
        <TextView
            android:text=""
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_column="1"/>
    </TableRow>

    <com.rusinak.carstat.ui.stats.StatsScrollDisabler
        android:id="@+id/statsRepair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

    <TableRow>
        <TextView
            android:text="@string/general"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="start"
            android:layout_column="1"/>
        <TextView
            android:text=""
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_column="1"/>
    </TableRow>

    <com.rusinak.carstat.ui.stats.StatsScrollDisabler
        android:id="@+id/statsAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>
    </TableLayout>
</ScrollView>